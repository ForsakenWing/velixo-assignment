{
  "extends": "../config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["./tests/*"],
      "@helpers/*": ["./tests/helpers/*"],
      "@config/*": ["./config/*"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": ["tests/**/*", "config/**/*", "playwright.config.ts"],
  "exclude": ["node_modules", "test-results", "playwright-report"]
}
